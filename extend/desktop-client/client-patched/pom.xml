<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.adempiere</groupId>
		<artifactId>client-deps</artifactId>
		<version>3.7.0-FR3403603-SNAPSHOT</version>
	</parent>

	<artifactId>client-patched</artifactId>

	<url>http://maven.apache.org</url>

	<dependencies>

		<dependency>
			<groupId>org.adempiere</groupId>
			<artifactId>client</artifactId>
			<version>${adempiere.version}</version>
			<type>jar</type>
			<scope>provided</scope>
		</dependency>
		
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.2</version>
				<executions>
					<execution>
						<id>extract_base_java</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/client_java</outputDirectory>
							<classifier>sources</classifier>
							<includeGroupIds>org.adempiere</includeGroupIds>
							<includeArtifactIds>client</includeArtifactIds>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.6</version>
				<executions>
					<execution>
						<id>delete_duplicate_client_classes</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<echo
									message="Deleting files from parent project that are to be overwritten in this project" />
								<delete>
									<fileset dir="${project.build.directory}/client_java"
										includes="**/*">
										<present targetdir="src/main/java" />
									</fileset>
								</delete>
								
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.5</version>
				<executions>
					<execution>
						<id>add-parent-sources</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>${project.build.directory}/client_java</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
