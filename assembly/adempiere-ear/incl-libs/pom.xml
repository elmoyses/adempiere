<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>adempiere-ear-incl-libs</artifactId>
	<packaging>ear</packaging>
	<name>ADempiere ERP - Adempiere Ear with dependencies</name>
	<url>http://www.adempiere.com/ADempiere_ERP</url>

	<parent>
		<groupId>org.adempiere</groupId>
		<artifactId>adempiere</artifactId>
		<version>3.7.1-SNAPSHOT</version>
		<relativePath>../..</relativePath>
	</parent>

	<dependencies>

		<!-- Adempiere -->

		<dependency>
			<groupId>org.adempiere</groupId>
			<artifactId>base</artifactId>
			<version>${adempiere.version}</version>
		</dependency>

		<dependency>
			<!-- required for ZK -->
			<groupId>org.adempiere</groupId>
			<artifactId>desktop-client</artifactId>
			<version>${adempiere.version}</version>
		</dependency>

		<dependency>
			<groupId>org.adempiere</groupId>
			<artifactId>jasperreports-lib</artifactId>
			<version>${adempiere.version}</version>
			<scope>runtime</scope>
		</dependency>

		<dependency>
			<groupId>org.adempiere</groupId>
			<artifactId>server-ejb</artifactId>
			<version>${adempiere.version}</version>
			<type>ejb</type>
		</dependency>

		<dependency>
			<groupId>org.adempiere</groupId>
			<artifactId>root-webapp</artifactId>
			<version>${adempiere.version}</version>
			<type>war</type>
		</dependency>

		<dependency>
			<groupId>org.adempiere</groupId>
			<artifactId>apps-webapp</artifactId>
			<version>${adempiere.version}</version>
			<type>war</type>
		</dependency>

<!--
Currently not deploying
due to errors like
2011-11-25 08:16:49,880 ERROR [org.apache.catalina.core.ContainerBase.[jboss.web].[localhost].[/webstore-webapp]] Servlet /webstore-webapp threw load() exception
org.apache.jasper.JasperException: Unable to compile class for JSP: 

