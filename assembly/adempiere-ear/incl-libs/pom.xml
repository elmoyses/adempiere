 -->
		<dependency>
			<groupId>org.adempiere</groupId>
			<artifactId>webcm-webapp</artifactId>
			<version>${adempiere.version}</version>
			<type>war</type>
		</dependency>

		<dependency>
			<groupId>org.adempiere</groupId>
			<artifactId>zkwebui-webapp</artifactId>
			<version>${adempiere.version}</version>
			<type>war</type>
		</dependency>

	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>2.6</version>
				<configuration>
					<includeLibInApplicationXml>true</includeLibInApplicationXml>
					<modules>
						<webModule>
							<groupId>org.adempiere</groupId>
							<artifactId>root-webapp</artifactId>
							<contextRoot>/admin</contextRoot>
						</webModule>
						<webModule>
							<groupId>org.adempiere</groupId>
							<artifactId>apps-webapp</artifactId>
							<contextRoot>/adempiere</contextRoot>
						</webModule>
						<webModule>
							<groupId>org.adempiere</groupId>
							<artifactId>webcm-webapp</artifactId>
							<contextRoot>/</contextRoot>
						</webModule>
						<webModule>
							<groupId>org.adempiere</groupId>
							<artifactId>zkwebui-webapp</artifactId>
							<contextRoot>/webui</contextRoot>
						</webModule>
					</modules>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>