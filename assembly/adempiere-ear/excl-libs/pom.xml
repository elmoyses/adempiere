<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>adempiere-ear-excl-libs</artifactId>
	<packaging>ear</packaging>
	<name>ADempiere ERP - Adempiere Ear without dependencies</name>
	<url>http://www.adempiere.com/ADempiere_ERP</url>

	<parent>
		<groupId>org.adempiere</groupId>
		<artifactId>adempiere</artifactId>
		<version>3.7.0-FR3403603-SNAPSHOT</version>
		<relativePath>../../..</relativePath>
	</parent>

	<dependencies>

		<!-- Adempiere -->

		<dependency>
			<groupId>org.adempiere</groupId>
			<artifactId>base</artifactId>
			<version>${adempiere.version}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>org.adempiere</groupId>
			<artifactId>swing-client</artifactId>
			<version>${adempiere.version}</version>
		</dependency>

		<dependency>
			<groupId>org.adempiere</groupId>
			<artifactId>jasperreports-lib</artifactId>
			<version>${adempiere.version}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>org.adempiere</groupId>
			<artifactId>server-ejb</artifactId>
			<version>${adempiere.version}</version>
			<type>ejb</type>
		</dependency>

		<dependency>
			<groupId>org.adempiere</groupId>
			<artifactId>root-webapp</artifactId>
			<version>${adempiere.version}</version>
			<type>war</type>
		</dependency>

		<dependency>
			<groupId>org.adempiere</groupId>
			<artifactId>apps-webapp</artifactId>
			<version>${adempiere.version}</version>
			<type>war</type>
		</dependency>

		<dependency>
			<groupId>org.adempiere</groupId>
			<artifactId>webstore-webapp</artifactId>
			<version>${adempiere.version}</version>
			<type>war</type>
		</dependency>

		<dependency>
			<groupId>org.adempiere</groupId>
			<artifactId>webcm-webapp</artifactId>
			<version>${adempiere.version}</version>
			<type>war</type>
		</dependency>

		<dependency>
			<groupId>org.adempiere</groupId>
			<artifactId>zkwebui-webapp</artifactId>
			<version>${adempiere.version}</version>
			<type>war</type>
		</dependency>

	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>2.6</version>
				<configuration>
					<modules>
						<jarModule>
							<groupId>org.adempiere</groupId>
							<artifactId>base</artifactId>
						</jarModule>
						<webModule>
							<groupId>org.adempiere</groupId>
							<artifactId>root-webapp</artifactId>
							<contextRoot>/admin</contextRoot>
						</webModule>
						<webModule>
							<groupId>org.adempiere</groupId>
							<artifactId>apps-webapp</artifactId>
							<contextRoot>/adempiere</contextRoot>
						</webModule>
						<webModule>
							<groupId>org.adempiere</groupId>
							<artifactId>webcm-webapp</artifactId>
							<contextRoot>/</contextRoot>
						</webModule>
						<webModule>
							<groupId>org.adempiere</groupId>
							<artifactId>zkwebui-webapp</artifactId>
							<contextRoot>/webui</contextRoot>
						</webModule>
					</modules>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>